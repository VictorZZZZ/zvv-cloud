<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zvv.client.gui.LoginController">
    <Label layoutX="62.0" layoutY="85.0" text="Login"/>
    <TextField fx:id="inpLogin" layoutX="96.0" layoutY="81.0"/>

    <Label layoutX="42.0" layoutY="122.0" text="Password"/>
    <PasswordField fx:id="inpPassword" layoutX="96.0" layoutY="118.0"/>

    <Button fx:id="btnLogin" layoutX="96.0" layoutY="169.0" mnemonicParsing="false" onAction="#btnLoginAction"
            prefHeight="25.0" prefWidth="149.0" text="Sign In"/>
    <Label layoutX="97.0" layoutY="40.0" prefHeight="41.0" prefWidth="117.0" text="ZVV Cloud"/>
    <Label layoutX="97.0" layoutY="204.0" text="Forgot password" textFill="#6456ff" underline="true">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Label>
    <Label fx:id="lblError" layoutX="42.0" layoutY="237.0" textFill="#eb4141"/>
</AnchorPane>
